/var/log/cron
/var/log/kern
/var/log/maillog
/var/log/messages
/var/log/secure
/var/log/spooler
/var/log/unused.log
{
	rotate 10
	size 100M
    nocompress
    notifempty
    missingok
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
    olddir /var/log/archive
}
